<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymAttendanceTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D80D25</item>
        <item name="colorPrimaryVariant">#B30024</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GymAttendanceTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GymAttendanceTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GymAttendanceTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />]
    
    <style name="Main_bg">
        <item name="android:background">@color/lightGrey</item>
    </style>

    <style name="Edit_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorHint">@color/grey_3</item>
    </style>



    <style name="Textview">
        <item name="android:textColor">@color/grey_3</item>
    </style>

    <style name="home_fragment">
        <item name="android:background">@color/white</item>
    </style>

    <style name="card_view">
        <item name="android:backgroundTint">@color/grey_cardview</item>
    </style>
</resources>